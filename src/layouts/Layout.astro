---
import SEO from '../components/SEO.astro';
import EventSEO from '../components/EventSEO.astro';

interface Props {
	title?: string;
	description?: string;
	canonical?: string;
	image?: string;
	ogType?: string;
	twitterCard?: string;
	keywords?: string;
	useEventSEO?: boolean;
	eventData?: {
		eventName: string;
		eventDate: string;
		eventLocation: string;
		eventDescription: string;
		eventImage: string;
		eventType?: string;
	};
}

const { 
	title = "Fiesta de 15 a침os de Samantha",
	description = "Landing page para eventos especiales. Dise침os personalizados para XV a침os, bodas y m치s celebraciones.",
	canonical,
	image,
	ogType,
	twitterCard,
	keywords,
	useEventSEO = false,
	eventData
} = Astro.props;

// Obtener la ruta base para los recursos
const basePath = import.meta.env.BASE_URL || '/';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="base-path" content={basePath} />
		<link rel="icon" type="image/svg+xml" href={`${basePath}favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- SEO y Open Graph -->
		{useEventSEO && eventData ? (
			<EventSEO 
				eventName={eventData.eventName}
				eventDate={eventData.eventDate}
				eventLocation={eventData.eventLocation}
				eventDescription={eventData.eventDescription}
				eventImage={eventData.eventImage}
				eventType={eventData.eventType}
			/>
		) : (
			<SEO 
				title={title}
				description={description}
				canonical={canonical}
				image={image}
				ogType={ogType}
				twitterCard={twitterCard}
				keywords={keywords}
			/>
		)}
		
		<!-- Estilos y fuentes -->
		<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Dancing+Script:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body class="font-poppins">
		<slot />
		<script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
		<script is:inline src={`${basePath}scripts/base-path.js`}></script>
		<script is:inline>
			window.addEventListener('load', function() {
				AOS.init({
					duration: 800,
					easing: 'ease-in-out',
					once: false,
					offset: 120,
					delay: 0,
					anchorPlacement: 'top-bottom'
				});

				// Refresh AOS cuando se hace scroll
				window.addEventListener('scroll', function() {
					AOS.refresh();
				});
			});
		</script>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth;
		overflow-x: hidden;
		font-family: 'Poppins', sans-serif;
	}
	
	.font-dancing {
		font-family: 'Dancing Script', cursive !important;
	}
	
	.font-poppins {
		font-family: 'Poppins', sans-serif !important;
	}
</style>
