<section id="rsvp" class="py-20 relative overflow-hidden" style="background-image: linear-gradient(to bottom, rgba(78, 205, 196, 0.05), rgba(255, 107, 107, 0.05))">
  <div class="container mx-auto px-4">
    <h2 class="section-title gradient-text font-dancing" data-aos="fade-up">Confirma tu Asistencia</h2>
    
    <div class="max-w-2xl mx-auto">
      <div class="card p-8" data-aos="zoom-in">
        <form id="rsvp-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-gray-700 mb-2">Nombre completo</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue"
                required
              />
            </div>
            <div>
              <label for="phone" class="block text-gray-700 mb-2">Teléfono</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue"
                required
              />
            </div>
          </div>
          
          <div>
            <label for="email" class="block text-gray-700 mb-2">Correo electrónico</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue"
              required
            />
          </div>
          
          <div>
            <label for="guests" class="block text-gray-700 mb-2">Número de acompañantes</label>
            <select 
              id="guests" 
              name="guests" 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue"
              required
            >
              <option value="0">Solo yo</option>
              <option value="1">1 acompañante</option>
              <option value="2">2 acompañantes</option>
              <option value="3">3 acompañantes</option>
              <option value="4">4 acompañantes</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-gray-700 mb-2">Mensaje (opcional)</label>
            <textarea 
              id="message" 
              name="message" 
              rows="3" 
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue"
            ></textarea>
          </div>
          
          <div class="flex justify-center">
            <button 
              type="submit" 
              class="btn btn-secondary"
            >
              Confirmar Asistencia
            </button>
          </div>
        </form>
        
        <!-- Success message (hidden by default) -->
        <div id="success-message" class="hidden text-center py-8">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-green-500 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-2xl font-dancing font-bold mb-2" style="color: var(--blue);">¡Gracias por confirmar!</h3>
          <p class="text-gray-600">
            Hemos recibido tu confirmación. ¡Nos vemos en la fiesta!
          </p>
        </div>
      </div>
      
      <div class="mt-10 text-center" data-aos="fade-up">
        <p class="text-gray-600">
          Por favor confirma tu asistencia antes del <span class="font-semibold">15 de mayo de 2025</span>
        </p>
        <p class="text-gray-600 mt-2">
          Para cualquier duda, contacta a: <a href="tel:+523331234567" class="text-blue hover:underline">+52 333 123 4567</a>
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  // Simple form handling
  const form = document.getElementById('rsvp-form');
  const successMessage = document.getElementById('success-message');
  
  if (form && successMessage) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // In a real application, you would send the form data to a server here
      
      // Show success message and hide form
      form.classList.add('hidden');
      successMessage.classList.remove('hidden');
    });
  }
</script>
