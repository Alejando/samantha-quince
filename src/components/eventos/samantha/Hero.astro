---
// Fecha del evento: 23 de mayo de 2025 a las 14:00
const eventDate = new Date('2025-05-23T14:00:00-06:00');
---

<section id="inicio" class="min-h-[90vh] bg-gradient-to-b from-white to-[#4ECDC4]/10 pt-20 pb-10 relative overflow-hidden">
  <div class="absolute inset-0 bg-pool-pattern opacity-20"></div>
  
  <!-- Efecto de agua de piscina simplificado -->
  <div class="pool-water-simple">
    <div class="water-reflection"></div>
    <div class="water-pattern"></div>
    <div class="water-pattern"></div>
    <div class="water-pattern"></div>
    <div class="water-gradient"></div>
  </div>
  
  <!-- Floating elements -->
  <div class="absolute top-1/4 left-10 float">
    <div class="w-16 h-16 rounded-full opacity-70" style="background-color: var(--yellow);"></div>
  </div>
  <div class="absolute top-1/3 right-20 float" style="animation-delay: 0.5s">
    <div class="w-12 h-12 rounded-full opacity-70" style="background-color: var(--pink);"></div>
  </div>
  <div class="absolute bottom-1/4 left-1/4 float" style="animation-delay: 1s">
    <div class="w-20 h-20 rounded-full opacity-70" style="background-color: var(--blue);"></div>
  </div>
  <div class="absolute bottom-1/3 right-1/4 float" style="animation-delay: 1.5s">
    <div class="w-14 h-14 rounded-full opacity-70" style="background-color: var(--orange);"></div>
  </div>
  
  <div class="container mx-auto px-4 py-10 relative z-10">
    <div class="flex flex-col items-center text-center">
      <h1 
        class="text-6xl md:text-8xl font-dancing font-bold mb-4 gradient-text"
        data-aos="zoom-in"
        data-aos-duration="1000"
      >
        Samantha
      </h1>
      <div 
        class="text-xl md:text-2xl font-light text-gray-600 mb-6"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        ¡Celebremos mis XV años!
      </div>
      <div 
        class="text-5xl md:text-7xl font-dancing mb-8"
        style="color: var(--blue);"
        data-aos="fade-up"
        data-aos-delay="400"
      >
        Pool Party
      </div>
      <div 
        class="flex flex-col md:flex-row gap-4 items-center justify-center mb-10"
        data-aos="fade-up"
        data-aos-delay="600"
      >
        <div class="flex items-center gap-2 text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--pink);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>23 de mayo de 2025</span>
        </div>
        <div class="hidden md:block text-gray-400">•</div>
        <div class="flex items-center gap-2 text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--yellow);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>2:00 PM - 10:00 PM</span>
        </div>
      </div>
      <div 
        class="countdown-container bg-white/80 backdrop-blur-sm p-6 rounded-xl shadow-lg border border-blue-200 inline-block"
        data-aos="zoom-in"
        data-aos-delay="800"
        id="countdown"
      >
        <div class="text-xl font-medium text-gray-700 mb-3">¡Faltan solo!</div>
        <div class="flex gap-4 justify-center">
          <div class="flex flex-col items-center">
            <div class="text-3xl font-bold" style="color: var(--blue);" id="days">--</div>
            <div class="text-sm text-gray-600">Días</div>
          </div>
          <div class="text-2xl font-light text-gray-400">:</div>
          <div class="flex flex-col items-center">
            <div class="text-3xl font-bold" style="color: var(--pink);" id="hours">--</div>
            <div class="text-sm text-gray-600">Horas</div>
          </div>
          <div class="text-2xl font-light text-gray-400">:</div>
          <div class="flex flex-col items-center">
            <div class="text-3xl font-bold" style="color: var(--yellow);" id="minutes">--</div>
            <div class="text-sm text-gray-600">Minutos</div>
          </div>
          <div class="text-2xl font-light text-gray-400">:</div>
          <div class="flex flex-col items-center">
            <div class="text-3xl font-bold" style="color: var(--orange);" id="seconds">--</div>
            <div class="text-sm text-gray-600">Segundos</div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="mt-12 md:mt-16 flex flex-col items-center justify-center" data-aos="fade-up" data-aos-delay="1000">
      <p class="text-gray-600 mb-4 text-center">Desplaza para ver más</p>
      <div class="w-14 h-14 rounded-full bg-white shadow-lg flex items-center justify-center bounce" style="box-shadow: 0 0 15px rgba(78, 205, 196, 0.5);">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--blue);">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </div>
    </div>
  </div>
</section>

<script>
  // Fecha del evento - debe coincidir con la fecha en la parte superior
  const eventDate = new Date('2025-05-23T14:00:00-06:00');
  
  // Elementos del DOM
  const daysElement = document.getElementById('days');
  const hoursElement = document.getElementById('hours');
  const minutesElement = document.getElementById('minutes');
  const secondsElement = document.getElementById('seconds');
  
  // Función para actualizar el contador
  function updateCountdown() {
    if (!daysElement || !hoursElement || !minutesElement || !secondsElement) return;
    
    const currentDate = new Date();
    const differenceMs = eventDate.getTime() - currentDate.getTime();
    
    // Si la fecha ya pasó
    if (differenceMs < 0) {
      daysElement.innerText = '0';
      hoursElement.innerText = '0';
      minutesElement.innerText = '0';
      secondsElement.innerText = '0';
      return;
    }
    
    // Cálculos de tiempo
    const days = Math.floor(differenceMs / (1000 * 60 * 60 * 24));
    const hours = Math.floor((differenceMs % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((differenceMs % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((differenceMs % (1000 * 60)) / 1000);
    
    // Actualizar elementos
    daysElement.innerText = days.toString();
    hoursElement.innerText = hours.toString();
    minutesElement.innerText = minutes.toString();
    secondsElement.innerText = seconds.toString();
  }
  
  // Esperar a que el DOM esté completamente cargado
  document.addEventListener('DOMContentLoaded', () => {
    // Actualizar inmediatamente
    updateCountdown();
    
    // Actualizar cada segundo
    setInterval(updateCountdown, 1000);
  });
</script>
