<script is:inline>
  // Función para asegurar que las secciones sean visibles al desplazarse
  document.addEventListener('DOMContentLoaded', function() {
    // Obtener todas las secciones
    const sections = document.querySelectorAll('section[id]');
    
    // Función para verificar qué sección está en el viewport
    function checkSections() {
      const scrollPosition = window.scrollY;
      
      sections.forEach(section => {
        const sectionTop = section.offsetTop - 200;
        const sectionHeight = section.offsetHeight;
        const sectionId = section.getAttribute('id');
        
        if (scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
          // Si la sección está en el viewport, asegurarse de que sea visible
          section.style.opacity = '1';
          section.style.visibility = 'visible';
          
          // Actualizar la URL con el hash de la sección actual (opcional)
          history.replaceState(null, null, `#${sectionId}`);
          
          // Marcar el enlace de navegación correspondiente como activo
          document.querySelectorAll('.nav-link').forEach(link => {
            if (link.getAttribute('href') === `#${sectionId}`) {
              link.classList.add('active-nav');
            } else {
              link.classList.remove('active-nav');
            }
          });
        }
      });
    }
    
    // Verificar las secciones al cargar la página
    checkSections();
    
    // Verificar las secciones al hacer scroll
    window.addEventListener('scroll', checkSections);
    
    // Navegación suave al hacer clic en los enlaces
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        
        const targetId = this.getAttribute('href');
        if (targetId === '#') return;
        
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
          window.scrollTo({
            top: targetElement.offsetTop - 80, // Ajuste para el header fijo
            behavior: 'smooth'
          });
        }
      });
    });
  });
</script>

<style is:global>
  /* Estilo para el enlace de navegación activo */
  .active-nav {
    color: var(--blue) !important;
    font-weight: 600;
  }
  
  /* Asegurar que todas las secciones sean visibles */
  section {
    opacity: 1 !important;
    visibility: visible !important;
  }
</style>
