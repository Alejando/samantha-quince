---

<section id="inicio" class="min-h-[90vh] bg-gradient-to-b from-white to-[#4ECDC4]/10 pt-20 pb-10 relative overflow-hidden">
  <div class="absolute inset-0 bg-pool-pattern opacity-20"></div>
  
  <!-- Efecto de agua de piscina simplificado -->
  <div class="pool-water-simple">
    <div class="water-reflection"></div>
    <div class="water-pattern"></div>
    <div class="water-pattern"></div>
    <div class="water-pattern"></div>
    <div class="water-gradient"></div>
  </div>
  
  <!-- Floating elements -->
  <div class="absolute top-1/4 left-10 float">
    <div class="w-16 h-16 rounded-full opacity-70" style="background-color: var(--yellow);"></div>
  </div>
  <div class="absolute top-1/3 right-20 float" style="animation-delay: 0.5s">
    <div class="w-12 h-12 rounded-full opacity-70" style="background-color: var(--pink);"></div>
  </div>
  <div class="absolute bottom-1/4 left-1/4 float" style="animation-delay: 1s">
    <div class="w-20 h-20 rounded-full opacity-70" style="background-color: var(--blue);"></div>
  </div>
  <div class="absolute bottom-1/3 right-1/4 float" style="animation-delay: 1.5s">
    <div class="w-14 h-14 rounded-full opacity-70" style="background-color: var(--orange);"></div>
  </div>
  
  <div class="container mx-auto px-4 py-10 relative z-10">
    <div class="flex flex-col items-center text-center">
      <h1 
        class="text-6xl md:text-8xl font-dancing font-bold mb-4 gradient-text"
        data-aos="zoom-in"
        data-aos-duration="1000"
      >
        Samantha
      </h1>
      <div 
        class="text-xl md:text-2xl font-light text-gray-600 mb-6"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        ¡Celebremos mis XV años!
      </div>
      <div 
        class="text-5xl md:text-7xl font-dancing mb-8"
        style="color: var(--blue);"
        data-aos="fade-up"
        data-aos-delay="400"
      >
        Pool Party
      </div>
      <div 
        class="flex flex-col md:flex-row gap-4 items-center justify-center mb-10"
        data-aos="fade-up"
        data-aos-delay="600"
      >
        <div class="flex items-center gap-2 text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--pink);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>23 de mayo de 2025</span>
        </div>
        <div class="hidden md:block text-gray-400">•</div>
        <div class="flex items-center gap-2 text-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--yellow);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>2:00 PM - 10:00 PM</span>
        </div>
      </div>
      <a 
        href="#rsvp" 
        class="btn btn-primary"
        data-aos="zoom-in"
        data-aos-delay="800"
      >
        Confirmar Asistencia
      </a>
    </div>
    
    <div class="mt-12 md:mt-16 flex flex-col items-center justify-center" data-aos="fade-up" data-aos-delay="1000">
      <p class="text-gray-600 mb-4 text-center">Desplaza para ver más</p>
      <div class="w-14 h-14 rounded-full bg-white shadow-lg flex items-center justify-center bounce" style="box-shadow: 0 0 15px rgba(78, 205, 196, 0.5);">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--blue);">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </div>
    </div>
  </div>
</section>
